<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://xmlns.jcp.org/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence/orm
                                     http://xmlns.jcp.org/xml/ns/persistence/orm_2_2.xsd"
                 version="2.2">

    <entity name="FilmCompany" class="models.FilmCompany">
        <table name="FilmCompany"/>
        <attributes>
            <id name="id">
                <generated-value strategy="IDENTITY"/>
            </id>

            <basic name="name"/>
            <basic name="dateOfFoundation">
                <column name="date_of_foundation"/>
            </basic>

            <one-to-many name="movies" target-entity="models.Movie">
                <join-column name="film_company_id" referenced-column-name="id"/>
            </one-to-many>
        </attributes>
    </entity>

</entity-mappings>
