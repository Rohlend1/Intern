<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                                 http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="MovieProject">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <mapping-file>META-INF/actor-mapping.xml</mapping-file>
        <mapping-file>META-INF/movie-mapping.xml</mapping-file>
        <mapping-file>META-INF/film-company-mapping.xml</mapping-file>
        <mapping-file>META-INF/comment-mapping.xml</mapping-file>
        <mapping-file>META-INF/review-mapping.xml</mapping-file>
        <mapping-file>META-INF/user-mapping.xml</mapping-file>
        <mapping-file>META-INF/genre-mapping.xml</mapping-file>

        <class>com.senlainc.models.Movie</class>
        <class>com.senlainc.models.Actor</class>
        <class>com.senlainc.models.FilmCompany</class>
        <class>com.senlainc.models.Comment</class>
        <class>com.senlainc.models.Review</class>
        <class>com.senlainc.models.User</class>
        <class>com.senlainc.models.Genre</class>

        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/movie_db"/>
            <property name="javax.persistence.jdbc.user" value="postgres"/>
            <property name="javax.persistence.jdbc.password" value="postgres"/>
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQL10Dialect"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
