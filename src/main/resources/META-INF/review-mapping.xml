<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="http://xmlns.jcp.org/xml/ns/persistence/orm"
                 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence/orm
                                     http://xmlns.jcp.org/xml/ns/persistence/orm_2_2.xsd"
                 version="2.2">

    <entity name="Comment" class="models.Comment">
        <table name="Comment"/>

        <attributes>
            <id name="id">
                <generated-value strategy="IDENTITY"/>
            </id>
            <basic name="description">
                <column name="description"/>
            </basic>
            <basic name="createdAt">
                <column name="created_at"/>
            </basic>
            <basic name="updatedAt">
                <column name="updated_at"/>
            </basic>
            <many-to-one name="owner" fetch="EAGER">
                <join-column name="user_id"/>
            </many-to-one>
            <many-to-one name="review" fetch="EAGER">
                <join-column name="review_id"/>
            </many-to-one>
            <one-to-one name="reply" fetch="EAGER">
                <join-column name="reply_id"/>
            </one-to-one>
        </attributes>
    </entity>

</entity-mappings>
